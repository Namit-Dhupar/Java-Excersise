import java.util.Scanner;
public class Pract {
	 public static void main(String []argh){
	        Scanner in = new Scanner(System.in);
	        int base =1;
	        int j;
	        int t=in.nextInt();
	        int a=0;
	        int b=0;
	        for(int i=1;i<=t;i++){
	         a = in.nextInt();
	         b = in.nextInt();
	        int n = in.nextInt();
	        int res=0;
	        for (j = 1; j <= n ; j++)  
		    {
		    res += j * b; 
		    j = j *  2;
	        System.out.print(a+res+" ");
		    }
	        System.out.println();
	        }
	        in.close();
	 }
}
